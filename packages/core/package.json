{
  "name": "@ruby/core",
  "version": "0.1.0",
  "description": "Ruby Core - AI-powered backend with ai-sdk",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruby-cli/ruby.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    }
  },
  "scripts": {
    "build": "node ../../scripts/build_package.js",
    "dev": "tsx --tsconfig ./tsconfig.json src/index.ts",
    "server": "tsx --tsconfig ./tsconfig.json src/server-main.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "^3.0.10",
    "@ai-sdk/anthropic": "^1.0.8",
    "@ai-sdk/openai": "^1.0.9",
    "ai": "^5.0.22",
    "chalk": "^5.6.0",
    "dotenv": "^17.1.0",
    "execa": "^9.5.1",
    "express": "^5.1.0",
    "fast-glob": "^3.3.2",
    "mime-types": "^3.0.1",
    "shell-quote": "^1.8.3",
    "strip-ansi": "^7.1.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.11.24",
    "@types/shell-quote": "^1.7.5",
    "@types/ws": "^8.18.1",
    "tsx": "^4.20.4",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=20"
  }
}
